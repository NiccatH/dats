mixin header(headerMods, currentUrl)
  -
    const headerLinks = [
      {
        href: "index.html",
        text: "Команда"
      },
      {
        href: "#",
        text: "Призы"
      },
      {
        href: "#",
        text: "Отзывы"
      },
      {
        href: "#",
        text: "Партнеры"
      },
    ]

  header.header(class=headerMods, data-header)
    .container
      .header__wrapper
        if(currentUrl === "index.html")
          +logo().header__logo
        else
          +logo({isLink:true}).heder__logo
        +burger()
        nav.main-nav
          ul.main-nav__list(data-scroll-lock-scrollable)
            each link in headerLinks
              li.main-nav__item
                a.main-nav__link(href=link.href data-close-menu)= link.text
